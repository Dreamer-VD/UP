<Page x:Class="BuildingMaterials.PageWindow.PageOrderInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BuildingMaterials.PageWindow"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Информация о заказах">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" IsReadOnly="True" AutoGenerateColumns="False"  ItemsSource="{Binding Orders}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата доставки" Binding="{Binding OrderDate}"/>

                <DataGridTextColumn Header="Дата доставки заказа" Binding="{Binding OrderDeliveryDate}"/>
                
                <DataGridTextColumn Header="Количество" Binding="{Binding Amount}"/>
            </DataGrid.Columns>
        </DataGrid >
    </Grid>
</Page>
