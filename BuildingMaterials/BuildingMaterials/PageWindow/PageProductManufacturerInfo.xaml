<Page x:Class="BuildingMaterials.PageWindow.PageProductManufacturerInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BuildingMaterials.PageWindow"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageProductManufacturerInfo">

    <Grid>
        <DataGrid Grid.Row="0" IsReadOnly="True" AutoGenerateColumns="False" FontSize="20" FontFamily="Comic Sans MS" ItemsSource="{Binding ProductManufacturers}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>

                <DataGridTextColumn Header="Производитель товара"  Binding="{Binding ProductManufacturerName}"/>
            </DataGrid.Columns>
        </DataGrid >
    </Grid>
</Page>
