<Window x:Class="BuildingMaterials.View.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuildingMaterials.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Подробная информация" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button x:Name="BtnLoadProduct" Height="20" Width="150" Content="Продукты" Background="Green" Click="BtnLoadProduct_Click" FontFamily="Comic Sans MS"/>

            <Button x:Name="BtnLoadOrder" Height="20" Width="150" Content="Заказы" Background="Green" Click="BtnLoadOrder_Click" FontFamily="Comic Sans MS"/>

            <Button x:Name="BtnLoadOrderPickupPoint" Height="20" Width="150" Content="Пункты выдачи" Background="Green" Click="BtnLoadOrderPickupPoint_Click" FontFamily="Comic Sans MS"/>
        </StackPanel>

        <Frame x:Name="FrameInfo" Grid.Row="0" Grid.Column="1" NavigationUIVisibility="Hidden"/>

        <Button x:Name="BtnExit" Grid.Row="0" Grid.Column="0" Width="150" Height="30" VerticalAlignment="Bottom" Background="Green" Content="Вернуться в меню" FontFamily="Comic Sans MS" Click="BtnExit_Click"/>

    </Grid>
</Window>
