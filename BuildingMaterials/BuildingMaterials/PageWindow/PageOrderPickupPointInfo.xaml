<Page x:Class="BuildingMaterials.PageWindow.PageOrderPickupPointInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BuildingMaterials.PageWindow"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Страница с информацией о пунктах выдачи">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" IsReadOnly="True" AutoGenerateColumns="False" FontSize="20" FontFamily="Comic Sans MS" ItemsSource="{Binding OrderPickupPoint}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Индекс улицы" Binding="{Binding Index}"/>
                
                <DataGridTextColumn Header="Улица" Binding="{Binding Street}"/>
            
            </DataGrid.Columns>
        </DataGrid >
    </Grid>
</Page>
